{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@repo/ui": [
        "../../packages/ui/src"
      ],
      "@repo/ui/*": [
        "../../packages/ui/src/*"
      ],
      "cms": [
        "../../packages/cms/src"
      ],
      "cms/*": [
        "../../packages/cms/src/*"
      ]
    }
  },
  "include": [
    "**/*.mjs",
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
